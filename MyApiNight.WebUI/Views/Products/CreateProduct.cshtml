@model MyApiNight.WebUI.Dtos.CreateProductDto
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<form method="post">
    <div class="container mb-3 mt-4">
        <label>Ürün Adı</label>
        <input type="text" asp-for="ProductName" class="form-control mb-3 mt-2"/>

        <label>Ürün Fiyat</label>
        <input type="text" asp-for="ProductPrice" class="form-control mb-3"/>

        <label>Ürün Stok</label>
        <input type="text" asp-for="ProductStock" class="form-control mb-3"/>
        <button class="btn btn-primary">Ürünü Ekle</button>
    </div>
</form>